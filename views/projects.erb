<h1><%= @project.name %></h1>

<form class="" action="/employee/add/<%= @project.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="employee_list">Select an employee to assign to project.</label>
  <select id="employee_list" name="employee_id" type="text">
    <% @employee_list.each do |employee| %>
      <option value="<%=employee.id %>"> <%= employee.name %></option>
    <% end %>
  </select>
  <button type="submit" name="button" class="btn">Add Employee</button>
</form>
